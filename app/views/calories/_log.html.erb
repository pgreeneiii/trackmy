<form action="/create_calorie" method="post">
 <!-- Hidden input for authenticity token to protect from forgery -->
 <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

 <!-- Label and input for user_id -->
 <div class="form-group">
    <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user.id %>">
 </div>

 <!-- Label and input for consumed -->
 <div class="form-group">
    <label for="consumed" class="control-label">
      Consumed
    </label>

    <input type="number" id="consumed" name="consumed" placeholder="Consumed" class="form-control">
 </div>

 <!-- Label and input for weight -->
 <div class="form-group">
    <label for="weight" class="control-label">
      Weight
    </label>

    <input type="number" id="weight" name="weight" placeholder="Weight" class="form-control">
 </div>

 <!-- Label and input for date -->
 <div class="form-group">
    <label for="date" class="control-label">
      Log Date
    </label>

    <input type="date" id="date" name="date" placeholder="Date" class="form-control" value="<%= calorie.date %>">
 </div>

 <button class="btn btn-success">
    Create Calorie
 </button>
 or
 <a href="/calories">Cancel</a>
</form>
