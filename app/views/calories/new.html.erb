<!-- Validation failure messages -->
<% if @calorie.errors.any? %>
  <% @calorie.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Calorie</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_calorie" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user.id %>">
      </div>

      <!-- Label and input for consumed -->
      <div class="form-group">
        <label for="consumed" class="control-label">
          Consumed
        </label>

        <input type="number" id="consumed" name="consumed" placeholder="Consumed" class="form-control" value="<%= @calorie.consumed %>">
      </div>

      <!-- Label and input for date -->
      <div class="form-group">
        <label for="date" class="control-label">
          Log Date
        </label>

        <input type="datetime-local" id="date" name="date" placeholder="Date" class="form-control" value="<%= @calorie.date %>">
      </div>

      <button class="btn btn-success">
        Create Calorie
      </button>
      or
      <a href="/calories">Cancel</a>
    </form>
  </div>
</div>
