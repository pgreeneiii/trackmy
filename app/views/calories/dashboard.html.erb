<div class="row">
   <div class="col-md-6">
      <div class="mb-2">
         <%= line_chart @cum_deficit, colors: ['#33cc33'] %>
      </div>

      <div class="mb-2">
         <%= line_chart @cum_consumed %>
      </div>
   </div>
   <div class=" col-md-offset-1 col-md-4">
      <h1> Input New Log </h1>
      <form action="/create_calorie" method="post">
        <!-- Hidden input for authenticity token to protect from forgery -->
        <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

        <!-- Label and input for user_id -->
        <div class="form-group">
          <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user.id %>">
        </div>

        <!-- Label and input for consumed -->
        <div class="form-group">
          <label for="consumed" class="control-label">
            Consumed
          </label>

          <input type="number" id="consumed" name="consumed" placeholder="Consumed" class="form-control" value="<%= @calorie.consumed %>">
        </div>

        <!-- Label and input for date -->
        <div class="form-group">
          <label for="date" class="control-label">
            Log Date
          </label>

          <input type="datetime-local" id="date" name="date" placeholder="Date" class="form-control" value="<%= @calorie.date %>">
        </div>

        <button class="btn btn-success">
          Create Calorie
        </button>
        or
        <a href="/calories">Cancel</a>
      </form>
   </div>
</div>
