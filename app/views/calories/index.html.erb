<div class="page-header">
  <h1>
    Calories
    <a href="/calories/new" class="btn btn-lg btn-success">New Calorie Log</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Consumed</th>
        <th>Deficit</th>
        <th>Date</th>
        <th>Actions</th>
      </tr>

      <% @calories.each do |calorie| %>
      <tr>
        <td><%= calorie.user_id %></td>
        <td><%= calorie.consumed %></td>
        <td><%= calorie.deficit %></td>
        <td><%= calorie.date %></td>
        <td>
          <a href="/calories/<%= calorie.id %>" class="btn btn-primary">Show</a>
          <a href="/calories/<%= calorie.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_calorie/<%= calorie.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
